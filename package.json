{
  "name": "@microsoft/office-js-helpers",
  "description": "An open-source collection of helpers for developing Office Add-ins",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OfficeDev/office-js-helpers.git"
  },
  "scripts": {
    "install-deps": "npm install & typings install",
    "tsc": "tsc -p tsconfig.json",
    "umd": "node build/browserify-umd.js",
    "minify": "node build/minify-umd.js",
    "build": "rimraf dist && npm run tsc && npm run umd && npm run minify",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags",
    "publish-patch": "npm version patch && npm publish",
    "publish-minor": "npm version patch && npm publish"
  },
  "main": "./dist/index.js",
  "jsnext:main": ".dist/index.js",
  "typings": "./dist/lib/index.d.ts",
  "license": "MIT",
  "files": [
    "dist/",
    "src/"
  ],
  "dependencies": {
    "core-js": "^2.4.1"
  },
  "devDependencies": {
    "typings": "^1.4.0",
    "typescript": "^2.0.3",
    "rimraf": "^2.5.4",
    "tslint": "^3.15.1",
    "jasmine-core": "^2.5.2",
    "browserify": "^13.1.0",
    "browserify-umdify": "^1.0.3",
    "uglify-js": "^2.7.4"
  },
  "keywords": [
    "Office Add-ins",
    "Office JavaScript API",
    "Authentication",
    "OAuth",
    "Storage",
    "Helpers"
  ],
  "author": "Microsoft",
  "bugs": {
    "url": "https://github.com/OfficeDev/office-js-helpers/issues"
  },
  "homepage": "https://github.com/OfficeDev/office-js-helpers#readme"
}